<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyStylesThemes" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryDarkColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryLightColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/editTextCustom</item>
        <item name="android:buttonStyle">@style/buttonCustom</item>
    </style>

    <style name="buttonCustom" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="editTextCustom" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:layout_width">@dimen/editTextWidth</item>
        <item name="android:layout_height">@dimen/editTextHeight</item>
        <item name="android:textSize">@dimen/fontSize</item>
    </style>

    <style name="textViewCustom" parent="android:style/Widget.TextView">
        <item name="android:layout_height">@dimen/textViewHeight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:paddingRight">@dimen/textViewPadding</item>
        <item name="android:paddingLeft">@dimen/textViewPadding</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>
</resources>